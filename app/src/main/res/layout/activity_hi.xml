<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Hi"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorPrimary"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_HiID"
        android:text="Name Appears Here."
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_HiID"
        android:layout_marginTop="20dp"
        android:text="Email Appears Here"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mobile_HiID"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="MB No Appears Here."
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getInfo_hiID"
        android:layout_marginTop="20dp"
        android:text="Get_INFO"
        android:background="#fff"
        />

    <TextView
        android:id="@+id/sampleText_hiID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:text="Bete idhar message aega"
        android:textColor="#fff"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:layout_marginTop="40dp"
        android:id="@+id/logout_hiID"
        />

</LinearLayout>